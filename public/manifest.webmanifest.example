{
  "name": "My Angular PWA",
  "short_name": "AngularPWA",
  "description": "A Progressive Web App built with Angular 19.",

  "start_url": "/?source=pwa",
  "scope": "/",

  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone", "browser"],

  "background_color": "#ffffff",
  "theme_color": "#0f172a",

  "orientation": "any",

  "icons": [
    {
      "src": "assets/icons/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "assets/icons/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "assets/icons/icon-maskable-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "assets/icons/icon-maskable-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],

  "lang": "en",
  "dir": "ltr",

  "categories": ["productivity"],

  "screenshots": [
    {
      "src": "assets/screenshots/screen-1.png",
      "sizes": "1280x800",
      "type": "image/png"
    }
  ]
}
